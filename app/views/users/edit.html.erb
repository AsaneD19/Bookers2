<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= render 'layouts/error_message', error_obj: @user %>
      <% end %>

      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
        <p>Name</p>
        <%= f.text_field :name, value: @user.name %>
        <br>
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <p>Introduction</p>
        <%= f.text_area :introduction, value: @user.introduction %>
        <br>
        <%= f.submit 'Update User', class: "btn btn-sm btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
