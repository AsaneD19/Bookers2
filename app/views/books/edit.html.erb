<h1>Editing Book</h1>
<div>
  <%= form_with model: @book, url: book_path, method: :patch do |f| %>

    <p>Title</p>
    <%= f.text_field :title %>
    <br>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book', class: "btn btn-sm btn-success" %>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "back", books_path %>
</div>