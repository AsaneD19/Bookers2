<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>Editing Book</h1>
      <% if @edit_book.errors.any? %>
        <%= render 'layouts/error_message', error_obj: @edit_book %>
      <% end %>

      <%= form_with model: @edit_book, url: book_path, method: :patch do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <br>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Update Book', class: "btn btn-sm btn-success" %>
      <% end %>

      <%= link_to "Show", book_path(@edit_book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
