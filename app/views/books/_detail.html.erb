<h1>Book Detail</h1>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to(user_path(user.id)) do %>
          <%= image_tag user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td>
        <a class="btn btn-success btn-block btn-sm" href=<%= edit_book_path(book.id) %>>Edit</a>
      </td>
      <td>
        <a class="btn btn-danger btn-block btn-sm" href=<%= book_path(book.id) %> method="delete" data-confirm="本当に消しますか？">Destroy</a>
      </td>

    </tr>
  </tbody>
</table>


