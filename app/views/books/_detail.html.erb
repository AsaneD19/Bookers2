<h1>Book detail</h1>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to(user_path(book.user.id)) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <p><%= user.name %></p>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <% if book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success btn-block btn-sm" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger btn-block btn-sm" %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>


