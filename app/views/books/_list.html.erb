<h1>Books</h1>
<table class="table">

  <thread>
    <tr>
      <th><!-- 写真用の空タイトル --></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thread>

  <tbody>
    <% books.each do |book| %>
      <tr>
          <td>
            <%= link_to(user_path(user.id)) do %>
              <%= image_tag user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>

</table>


